<div class="container my-5">
    <div class="title">
        <h3>Add new post</h3>
    </div>
    <div class="mt-4">
        <form>
            <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <div class="bor19 m-b-20">
                    <input class="stext-111 cl2 plh3 size-116 p-lr-18" type="text" name="name" placeholder="Title *">
                </div>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1">Category</label>
                <div  class="bor19 m-b-20">
                    <select class="stext-111 cl2 plh3 size-116 p-lr-18" id="exampleFormControlSelect1">
                        <option>-- Category --</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label>Description</label>
                 <div class="bor19 m-b-20">
                <textarea class="stext-111 cl2 plh3 size-124 p-lr-18 p-tb-15" name="cmt" placeholder="Comment..."></textarea>
            </div>
            </div>
            <div class="form-group">
                <label >Content</label>
                <textarea class="form-control" rows="3" id="editor" ></textarea>
            </div>
           <button class="flex-c-m stext-101 cl0 size-125 bg3  hov-btn3 p-lr-15 trans-04">
                Create
            </button>
        </form>
    </div>
</div>
<script src="https://cdn.ckeditor.com/4.13.0/standard/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>